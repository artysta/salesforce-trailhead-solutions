<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="property" type="Property__c" />
    <aura:attribute name="brokerFields" type="String[]" default="Name,Title__c,Phone__c,Email__c" />
    <force:recordData aura:id="propertyRecord" recordId="{!v.recordId}" targetFields="{!v.property}" layoutType="FULL" />
    <lightning:card iconName="standard:user" title="{! 'Broker for ' + v.property.Name}">
        <div class="slds-p-left_large slds-p-right_medium">
            <lightning:recordForm aura:id="brokerForm" recordId="{!v.property.Broker__c}" objectApiName="Broker__c" fields="{!v.brokerFields}" columns="2" mode="View" />
        </div>
    </lightning:card>
</aura:component>